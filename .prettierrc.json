{
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "jsxSingleQuote": false,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "arrowParens": "always",
  "overrides": [
    {
      "files": "*.js|*.jsx|*.ts|*.tsx",
      "options": {
        "importOrder": [
          "@/(.*)",
          "<THIRD_PARTY_MODULES>",
          "^[./]",
          "^routes",
          "^pages",
          "^controllers",
          "^components",
          "^contexts",
          "^hooks",
          "^config",
          "^constants",
          "^utils"
        ],
        "emptyLineBetweenGroups": true
      }
    }
  ]
}
